{
  "name": "steamapp-api",
  "version": "1.0.0",
  "description": "API for the SteamApp",
  "main": "server.ts",
  "scripts": {
    "start": "ts-node server.ts --fast",
    "start-dev": "nodemon -x ts-node server.ts --fast",
    "lint": "tslint --project tsconfig.json --type-check",
    "test": "NODE_ENV=test jest --forceExit --verbose"
  },
  "repository": {
    "type": "git",
    "url": "git+https://bitbucket.org/mcx_/steamapp.git"
  },
  "author": "Gamestars Ltd.",
  "license": "ISC",
  "homepage": "https://bitbucket.org/mcx_/steamapp#readme",
  "private": true,
  "dependencies": {
    "bunyan": "^1.8.10",
    "cross-env": "^5.0.1",
    "dotenv": "^4.0.0",
    "good": "^7.2.0",
    "good-bunyan": "^1.3.0",
    "hapi": "^16.5.0",
    "http-status-codes": "^1.2.0",
    "joi": "^10.6.0",
    "jsonwebtoken": "^7.4.1",
    "knex": "^0.13.0",
    "nes": "^6.4.3",
    "pg-monitor": "^0.8.2",
    "pg-promise": "^6.3.6",
    "ts-node": "^3.3.0",
    "tslint": "^5.5.0",
    "tslint-consistent-codestyle": "^1.5.1",
    "typescript": "^2.4.2",
    "typescript-formatter": "^5.2.0"
  },
  "devDependencies": {
    "@types/bunyan": "^1.8.0",
    "@types/hapi": "^16.1.7",
    "@types/http-status-codes": "^1.0.29",
    "@types/jest": "^20.0.5",
    "@types/joi": "^10.4.0",
    "@types/nes": "^6.2.8",
    "hapi-auth-jwt": "^4.0.0",
    "jest": "^20.0.4",
    "nodemon": "^1.11.0",
    "ts-jest": "^20.0.7"
  },
  "jest": {
    "transform": {
      ".ts": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(.*\\.test\\.ts)$",
    "collectCoverageFrom": [
      "**/*.{ts,tsx}",
      "!**/node_modules/**",
      "!**/vendor/**"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  }
}
